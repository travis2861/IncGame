<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cookieCountText"
        android:id="@+id/cookieCount"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cookieButtonString"
        android:id="@+id/cookieButton"
        android:layout_marginTop="22dp"
        android:onClick="cookieButtonPressed"
        android:layout_below="@+id/cookieCount"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buyClickerButtonText"
        android:id="@+id/buyClickerButton"
        android:layout_below="@+id/cookieButton"
        android:layout_toLeftOf="@+id/cookieButton"
        android:layout_toStartOf="@+id/cookieButton"
        android:layout_marginTop="24dp"
        android:onClick="buyClicker"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/clickerAmountText"
        android:text="Small Text"
        android:layout_alignTop="@+id/buyClickerButton"
        android:layout_alignLeft="@+id/clickerCostText"
        android:layout_alignStart="@+id/clickerCostText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/clickerCostText"
        android:layout_below="@+id/clickerAmountText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/cpsText"
        android:layout_below="@+id/cookieCount"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
